@model IEnumerable<Angular_Evi_Exam_09.Models.ViewModels.ProductVm>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class=" row">
    <div class="col">
        <div class="d-flex justify-content-end mb-1">
            <a asp-action="Create" asp-controller="Products" class="btn btn-primary btn-sm">Add New</a>
        </div>
        <table class=" table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Discount</th>
                    <th>Current Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.Name</td>
                        <td>@p.Price</td>
                        <td>@p.Discount</td>
                        <td>@p.CurrentPrice</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-controller="Products" asp-action="Edit" asp-route-id="@p.Id">Edit</a>
                            <a class="btn btn-danger btn-sm" asp-controller="Products" asp-action="Delete" asp-route-id="@p.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
